<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if @item_orders %>

    <% @item_orders.each do |item_order| %>

      <%= image_tag(item_order.item.image_url, class:"img-fluid", alt:"") %>

      <%= item_order.item.title %>

      <%= item_order.item.price %>

      <%= button_to item_order_path(item_order.id), remote: true, method: :delete do %>
      <i class="ion-close"></i>
    <% end %>

  <% end %>

<% end %>
